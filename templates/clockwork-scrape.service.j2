[Unit]
Description=clockwork slurm scraper
After=network.target

[Service]
Type=oneshot
User={{ clockwork_user }}
Group={{ clockwork_group }}
Environment=CLOCKWORK_CONFIG=/etc/clockwork/clockwork.toml

WorkingDirectory={{ clockwork_install_path }}
ExecStart=timeout 120 rsync -a {{ item.remote_user }}@{{ item.remote_hostname }}:{{ item.remote_path }}/* {{ clockwork_user_home }}/reports/{{ item.name }}
ExecStart=python3 slurm_state/read_report_commit_to_db.py --jobs_file={{ clockwork_user_home }}/reports/{{ item.name }}/scontrol_show_job --noded_file={{ clockwork_user_home }}/reports/{{ item.name }}/scontrol_show_node --cluster_name={{ item.name }} --store_in_db
