[Unit]
Description=clockwork web server
After=network.target

[Service]
User={{ clockwork_user }}
Group={{ clockwork_group }}
Environment=CLOCKWORK_CONFIG=/etc/clockwork/clockwork.toml

WorkingDirectory={{ clockwork_install_path }}
ExecStart={{ clockwork_venv_path }}/bin/uwsgi --ini /etc/clockwork/uwsgi.ini

[Install]
WantedBy=multi-user.target
